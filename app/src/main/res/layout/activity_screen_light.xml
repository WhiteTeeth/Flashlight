<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/screen_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="baiya.flashlight.ScreenLightActivity">

    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/screen_mode_container"
        android:layout_marginTop="25.0dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center"
            android:layout_weight="1.0"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/screen_flick"
                android:background="@drawable/flash_flick_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1.0"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/screen_touch"
                android:background="@drawable/flash_touch_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1.0"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/screen_warn"
                android:background="@drawable/flash_warning_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    <baiya.flashlight.views.VerticalSeekBar
        android:id="@+id/screen_time_bar"
        android:layout_marginLeft="16.0dip"
        android:progressDrawable="@drawable/scrubber_progress_horizontal_holo_gray"
        android:thumb="@drawable/scrubber_control_selector_holo_gray"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="300.0dip"
        android:indeterminate="false" />
    <baiya.flashlight.views.VerticalSeekBar
        android:id="@+id/screen_light_bar"
        android:layout_marginRight="16.0dip"
        android:progressDrawable="@drawable/scrubber_progress_horizontal_holo_gray"
        android:thumb="@drawable/scrubber_control_selector_holo_gray"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="300.0dip" />
    <FrameLayout
        android:id="@+id/screen_tel_tips"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_gravity="center"
            android:src="@drawable/tips"
            android:layout_width="178.0dip"
            android:layout_height="wrap_content" />
        </FrameLayout>
    <ImageView
        android:id="@+id/screen_close"
        android:background="@drawable/close_btn"
        android:layout_marginBottom="48.0dip"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
